@model WebApplicationTRY_TWO.Models.CommentViewModel

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>Delete Comment</h2>

<div>
    <h4>Are you sure you want to delete this comment?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.comment_text)</dt>
        <dd>@Html.DisplayFor(model => model.comment_text)</dd>

        <dt>Product</dt>
        <dd>@Html.DisplayFor(model => model.product_name)</dd>

        <dt>Posted By</dt>
        <dd>@Html.DisplayFor(model => model.user_name)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </form>
</div>