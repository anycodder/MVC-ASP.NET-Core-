@model WebApplicationTRY_TWO.Models.Products

<h2>Create Product</h2>

<form asp-action="Create">
    <div class="form-group">
        <input asp-for="products_name" class="form-control" placeholder="Name"/>
    </div>
    <div class="form-group">
        <input asp-for="products_description" class="form-control" placeholder="Description"/>
    </div>
    <div class="form-group">
        <input asp-for="products_price" class="form-control" placeholder="Price"/>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a href="@Url.Action("Index")">Back to List</a>
</div>